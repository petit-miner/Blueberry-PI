/dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"
#include <dt-bindings/input/input.h>
/ {
	model = "Blueberry Pi";
	compatible = "blueberrypi", "allwinner,sun8i-v3s";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac;
		
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	leds {
	compatible = "gpio-leds";

	act_led {
		label = "act_led:green:usr";
		gpios = <&pio 1 2 GPIO_ACTIVE_HIGH>; /* PB2 */
		linux,default-trigger = "mmc0";
		default-state = "off";
	};
	};
};



&csi1 {
    	status = "okay";
    	pinctrl-names = "default";
    	pinctrl-0 = <&csi1_pins &csi1_mclk>;
    	
			


    port {
	/* Parallel bus endpoint */
	csi1_ep: endpoint {
		
		remote-endpoint = <&ov7670_0>;
		hsync-active = <1>;
		vsync-active = <0>;
		pclk-sample = <1>;
		
		
	};
};
 };

&i2c1 {
    	pinctrl-0 = <&i2c1_pins>;
	pinctrl-names = "default";
	status = "okay";

	
	ov7670: camera@30 {
        	compatible = "ovti,ov7670";
		reg = <0x21>;
		clocks = <&ccu CLK_CSI1_MCLK>;
		clock-names = "xclk";
		assigned-clock-rates = <24000000>;
		assigned-clocks = <&ccu CLK_CSI1_MCLK>;
        
             
        port {
            	ov7670_0: endpoint {
			
					remote-endpoint = <&csi1_ep>;
			};     
             
        };
    };
};



&mmc0 {
	pinctrl-0 = <&mmc0_pins>;
	pinctrl-names = "default";
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};


&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpio = <&pio 5 6 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&emac {
	allwinner,leds-active-high;
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&i2c0 {
	pinctrl-0 = <&i2c0_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&codec {
	allwinner,audio-routing = "Headphone", "HP", "Headphone", "HPCOM", "Mic", "MIC1";
	status = "okay";
};

&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";

	button@200 {
		label = "Volume Up";
		linux,code = <KEY_VOLUMEUP>;
		channel = <0>;
		voltage = <200000>;
	};

	button@400 {
		label = "Volume Down";
		linux,code = <KEY_VOLUMEDOWN>;
		channel = <0>;
		voltage = <400000>;
	};

	button@600 {
		label = "Select";
		linux,code = <KEY_SELECT>;
		channel = <0>;
		voltage = <600000>;
	};

	button@800 {
		label = "Start";
		linux,code = <KEY_OK>;
		channel = <0>;
		voltage = <800000>;
	};
};

&pio {
	csi1_pins: csi1-pins@0 {
	        pins 	 = "PE0","PE2","PE3","PE4","PE5","PE6","PE7","PE8","PE9","PE10","PE11";
	        function = "csi";
    	};

	csi1_mclk: csi1-mclk@0 {
	        pins = "PE1";
	        function = "csi";
    	};

	i2c0_pins: i2c0 {
		pins = "PB6", "PB7";
		function = "i2c0";
	};

	i2c1_pins: i2c1 {
		pins = "PE21", "PE22";
		function = "i2c1";
	};
	

	uart0_pins: uart0@0 {
	 	pins = "PB8", "PB9";
		function = "uart0";
	};

};

